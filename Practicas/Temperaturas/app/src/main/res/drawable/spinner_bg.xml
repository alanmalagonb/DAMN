<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom border -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#0B72D1" />
            <padding
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Background color -->
    <item android:top="0dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item
        android:drawable="@drawable/termometro"
        android:width="24dp"
        android:height="24dp"
        android:gravity="center_vertical|right"
        android:paddingRight="16dp"
        android:tint="#000000" />

</layer-list>