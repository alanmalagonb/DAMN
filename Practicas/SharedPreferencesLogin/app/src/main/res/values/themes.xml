<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ActividadeseIntenciones" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name ="estiloTextView">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/background_cuadros_texto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">#16BFFD</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="estiloEditText">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/background_cuadros_texto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">#16BFFD</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="estiloBoton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_cuadros_texto</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textColor">#16BFFD</item>
        <item name="android:textSize">23sp</item>
    </style>
    <style name="estiloImagen">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/background_image</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>